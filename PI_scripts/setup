
#!/bin/bash  
cd ~
 sudo apt-get install npm -y
 sudo npm i -g npm@2.x
 
 echo "Looks like cannot install nodes from command line -- install from Manage Palette within Node Red"
 
 echo  npm install node-red-node-grovepi
 echo  npm install node-red-node-dweetio
 echo  npm install node-red-dashboard

 sudo systemctl enable nodered.service
  
 cp ~/refAP3repo/PI_scripts/.bash_aliases ~/
 
 git config credential.helper store
 git config --global user.name loclPI
 git config --global user.email loclPI@hirntod.com
 
 . ~/.bash_aliases 
 
 
 
