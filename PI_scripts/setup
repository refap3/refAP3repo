
#!/bin/bash  
cd ~
pwd 

echo "unsure if this will ever work -- revert to inited version of noobs"

 sudo apt-get update -y
 update-nodejs-and-nodered
 echo "maybe this works now???"
 npm install node-red-contrib-grovepi
 npm install node-red-node-dweetio
 npm install node-red-dashboard

 sudo systemctl enable nodered.service
  
 cp ~/refAP3repo/PI_scripts/.bash_aliases ~/
 
 git config credential.helper store
 git config --global user.name loclPI
 git config --global user.email loclPI@hirntod.com
 
 . ~/.bash_aliases 
 
 
 
